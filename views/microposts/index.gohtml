{{define "yield"}}
    <br>
    <div class="row center">
        <a role="link" href="/microposts">
            <img src="data:image/svg+xml;utf8;base64," />
        </a>
        <a role="link" href="/microposts" id="landing-secondary-content"><h4 class="light blue-grey-text">MICROPOST</h4></a>
        <h5>A private thought collection</h5>
    </div>
    <div class="row">
        <div class="col s3 m3 offset-s9 offset-m8">
            <a href="/microposts/new" class="waves-effect waves-light btn red lighten-3 right"><i class="material-icons">add</i></a>
        </div>
    </div>
    <div class="row">
        {{template "micropostAccountIndex" .}}
    </div>
{{end}}

{{define "micropostAccountIndex"}}
    <div class="row">
        <div class="col s12 m10 offset-m1">
            <div class="card">
                {{if .}}
                    <ul class="collection with-header">
                        {{range .}}
                            <li class="collection-item avatar">
                                <a href="/microposts/{{.ID}}"><br>
                                <span class="title red-text text-lighten-3">GoBlog # {{.ID}}</span>
                                <h5 class='center blue-grey-text'>{{.Content}} <br><br>
                                     <small>{{.CreatedAt}}</small>
                                </h5><br>
                                <a href="/microposts/{{.ID}}" class="secondary-content"><i class="material-icons">keyboard_arrow_right</i></a>
                            </a>
                            </li>
                        {{end}}
                    </ul>
                {{else}}
                    <div class="center"><br>
                        <h4 class="blue-grey-text text-lighten-4">No Microposts<h4><br>
                        <h5>Try creating one</h5><br>
                    </div>
                {{end}}
            </div>
        </div>
    </div>
{{end}}