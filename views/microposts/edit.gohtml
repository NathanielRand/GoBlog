{{define "yield"}}
    <div class="container">
        <div class="row center">
            <br>
            <img src="data:image/svg+xml;utf8;base64," />
            <h4 class="blue-grey-text text-lighten-1">MICROPOST</h4><br>
            <h5 class="blue-grey-text text-lighten-1">EDIT</h5><br>
        </div>
        <div class="row">
            {{template "micropostShowButton" .}}
        </div>
        <div class="row">
            {{template "micropostEditForm" .}}
        </div>
        <div class="row">
            {{template "micropostEditInformation" .}}
        </div>
        <div class="row">
            {{template "micropostDeleteForm" .}}
        </div>
    </div>
{{end}}

{{define "micropostShowButton"}}
    <a href="/microposts/{{.ID}}" class="waves-effect waves-light btn btn-flat blue-grey-text left" type="submit" name="action"><i class="material-icons">keyboard_arrow_left</i> Go to Micropost</a>
{{end}}

{{define "micropostEditForm"}}
    <div class="col s12 m8 offset-m2 card hoverable z-depth-1">
        <div class="card-content">
            <div class="card-title">
                <h4>Content</h4>
            </div>
            <form action="/micropost/{{.ID}}/update" method="POST">
                {{csrfField}}
                <div class="input-field col s11 m11">
                    <input id="micropost-title" type="text" class="validate" name="title" data-length="66" value="{{.Content}}" pattern=".{1,66}" title="Title missing">
                    <label for="micropost-title" data-error="Too long" data-success="Accepted"></label>
                </div>
                <div class="card-content right">
                    <button type="submit" class="btn waves-effect waves-light red lighten-3">
                        <i class="material-icons">save</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
{{end}}

{{define "micropostEditInformation"}}
    <div class="col s12 m8 offset-m2 card z-depth-1">
        <div class="card-content">
            <div class="card-title">
                <h4>Information</h4>
            </div><br>
            <p><b>Micropost:</b> #{{.ID}}</p><br>
            <p><b>Created: </b><br>
            {{.CreatedAt}}</p><br>
            <p><b>Updated: </b><br>
            {{.UpdatedAt}}</p>
        </div>
        <div class="card-action right-align">
            <a href="/microposts/{{.ID}}" class="btn waves-effect waves-light red lighten-3">
                <i class="material-icons">visibility</i>
            </a>
        </div>
    </div>
{{end}}

{{define "micropostDeleteForm"}}
    <div class="card col s12 m8 offset-m2">
        <div class="card-content">
            <div class="card-title">
                <h4>Delete</h4>
            </div><br>
            
            <!-- Modal Trigger -->
            <a class="waves-effect waves-light btn modal-trigger" href="#modal1">DELETE</a>
            
            <!-- Modal Structure -->
            <div id="modal1" class="modal">
                <div class="modal-content">
                    <h4>Modal Header</h4>
                    <p>A bunch of text</p>
                </div>
                <div class="modal-footer">
                    <form action="/microposts/{{.ID}}/delete" method="POST">
                        {{csrfField}}
                        <button type="submit" class="modal-close btn btn-small waves-effect waves-light red lighten-3">
                            <i class="material-icons left">delete_forever</i> DELETE
                        </button>
                    </form>
                </div>
            </div>
            
            
        </div>
        <div class="card-action">
            <a class="waves-effect waves-light grey-text text-darken-2 right">
               <i class="material-icons">help_outline</i>
            </a>
        </div>
    </div>
{{end}}

